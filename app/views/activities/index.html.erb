<div id='activities_page' class='activities-page-container'>
  <div class='container'>
    <div class='mb-3 row align-items-start justify-content-between flex-nowrap'>
      <div class='categories-col'>
        <% @categories.each_with_index do |text, ind| %>
          <% first = '' %>
          <% first = 'active' if ind == 0 %>
          <p id="<%= ind %>" class="<%= first %> cat-btn btn btn-act"><%= text %></p>
        <% end %>
      </div>
      <div class="form-col text-right">
        <form id='search-form' class='form-inline'>
          <label for="search"><i class="material-icons">search</i></label>
          <input type="text" class="form-control" id='search-input' name='query' placeholder="e.g. Natural History Museum">
        </form>
      </div>
      <!-- <p id='searchSubmit' class='btn btn-info'>search for 'Berlin Unterwelt</p> -->
    </div>
    <div class="row">
      <div class='col'>
        <h3>Available Activities</h3>
        <div id="activities">
        </div>
      </div>
      <div class='col shortlist-col'>
        <h3>Selected</h3>
          <%#= render partial: 'activities/shortlisted_activity_card.html.erb', locals: {title: 'Some Place'} %>
          <%#= render partial: 'activities/shortlisted_activity_card.html.erb', locals: {title: 'The Big Castle Shed'}  %>
          <%#= render partial: 'activities/shortlisted_activity_card.html.erb', locals: {title: 'The Giant Longed Name Cathedral of Berlin'}  %>
            <div id="shortlist" class="shortlist-col mt-3 row">
            </div>
          <div class='mt-2 col text-centre'>
            <p id="submit_shortlist" class="d-none opac-0 btn btn-primary">Continue to Itinerary</p>
          </div>
      </div>
    </div>
  </div>
</div>
<div id="modal-container"></div>
</div>






