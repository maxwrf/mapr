<div id='modal' class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= data['name'] %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Average Rating: <%= data['rating'] %></p>
        <p>Price Level (may not exist): <%= data['price_level'] %></p>
        <p>Opening Hours (may not exist): <%= data['opening_hours'] %></p>
        <h4>Reviews</h4>
        <% data['reviews'].each do |review|  %>
          <p>(<%= review['rating'] %>) - <%= review['text'] %></p>
        <% end %>
        <h4>Photos</h4>
        <% data['photos'].each do |photo|  %>
          <p><%= photo['photo_reference'] %></p>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

