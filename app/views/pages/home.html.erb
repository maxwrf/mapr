<%= content_for(:navbar_class, "navbar-home") %>

<div class="banner">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="container mb-2 form-login">
            <h2 class="mt-2 text-left">Plan your unique trip to the most amazing cities in the world.</h2>
            <%= form_for(@plan) do |f| %>
              <div class="form-group">
                <%= f.label :City %>
                <%= f.text_field :city, class: 'form-control', id:"plan-city" %>
              </div>

              <div class="form-group">
                <%= f.label :Date %>
                <%= f.text_field :start_date_time, class: 'form-control datepicker bg-white border-bottom' %>
              </div>
              <div class="row">
                <div class="col-6">
                  <div class="form-group">
                    <%= f.label :Adults %>
                    <div class="num d-flex">
                      <button onclick="this.parentNode.querySelector('input[type=number]').stepDown();event.preventDefault()">-</button>
                      <%= f.number_field :number_adults, in: 0.0..20.0, step: 1.0, placeholder: "0", class: 'form-control' %>
                      <button onclick="this.parentNode.querySelector('input[type=number]').stepUp();event.preventDefault()">+</button>
                    </div>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <%= f.label :Children %>
                    <div class="num d-flex">
                      <button onclick="this.parentNode.querySelector('input[type=number]').stepDown();event.preventDefault()">-</button>
                      <%= f.number_field :number_children, in: 0.0..20.0, step: 1.0, placeholder: "0", class: 'form-control' %>
                       <button onclick="this.parentNode.querySelector('input[type=number]').stepUp();event.preventDefault()">+</button>
                    </div>
                  </div>
                </div>
              </div>
              <%= f.submit class: 'btn btn-primary bg-thematic', style: "font-weight: bold" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


